<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="BtnTheme">
        <item name="android:background">@android:color/background_light</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutTheme" parent="@android:style/TextAppearance">
        <item name="android:textColorHint">@android:color/background_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:colorControlNormal">@android:color/background_light</item>
        <item name="colorControlActivated">@android:color/background_light</item>
        <item name="colorControlHighlight">@android:color/background_light</item>
    </style>

</resources>
